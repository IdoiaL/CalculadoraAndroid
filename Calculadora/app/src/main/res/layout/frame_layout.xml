<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/num1"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:paddingTop="100dp"
        android:layout_gravity="top|center"
        android:hint="NÃºmero 1" />

    <EditText
        android:id="@+id/num1_EditText"
        android:layout_width="300dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:hint="Texto de entrada" />

    <Button
        android:id="@+id/boton_suma"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#9C27B0"
        android:text="+"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <Button
        android:id="@+id/boton_resultado"
        android:layout_width="216dp"
        android:layout_height="90dp"
        android:layout_gravity="center|bottom"
        android:backgroundTint="#E91E63"
        android:text="Resultado"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <ImageView
        android:id="@+id/imagen_background"
        android:layout_width="match_parent"
        android:layout_height="801dp"
        android:layout_gravity="top|center"
        android:scaleType="centerCrop"
        android:src="@drawable/cielo" />

    <ImageView
        android:id="@+id/imagen_estadistica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="16dp"
        android:src="@drawable/montanas" />

</FrameLayout>